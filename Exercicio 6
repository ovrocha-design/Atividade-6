import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner entrada = new Scanner(System.in);
        int numero1 = 10;
        int i = 1;
        int menor = 0;
        System.out.println("--- Encontrar o Menor entre " + numero1 + " Números Positivos ---");
        while (i <= numero1) {
            System.out.print("Digite o " + i + "º número inteiro e positivo: ");
            int numero2 = entrada.nextInt();
            if (numero2 <= 0) {
                System.out.println("Erro: O número deve ser positivo. Tente novamente.");
                continue;
            }
            if (i == 1) {
                menor = numero2;
            } else {
                if (numero2 < menor) {
                    menor = numero2;
                }
            }
            i++;
        }
        entrada.close();
        System.out.println("O menor número digitado foi: " + menor + " ");
       
    }
}

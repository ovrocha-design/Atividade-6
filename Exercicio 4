public class Exercicio4 {
    public static void main(String[] args) {
        int fim = 20;
        int numero1 = 10;
        while (numero1 <= fim) {
            double metade = (double) numero1 / 2.0;
            System.out.printf("A metade de %d Ã© %.1f\n", numero1, metade);
            numero1++;
        }
    }
}
